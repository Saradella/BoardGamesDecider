<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/colorAccent"
        tools:context=".MainActivity">

    <ImageView
            android:layout_width="125dp"
            android:layout_height="112dp" app:srcCompat="@drawable/ikonaplanszowki"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" android:id="@+id/imageView" android:layout_marginTop="68dp"
            app:layout_constraintTop_toTopOf="parent"/>
    <TextView
            android:text="Decide what to play"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintEnd_toEndOf="parent"
            android:id="@+id/selectedGameTxt" android:layout_marginTop="36dp"
            app:layout_constraintTop_toBottomOf="@+id/imageView" android:textSize="30sp"
            android:fontFamily="@font/merriweather_bold"
    />
    <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:ems="10"
            android:id="@+id/addGameTxt"
            android:fontFamily="@font/merriweather_bold"
            android:textColor="@android:color/black" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginBottom="16dp" app:layout_constraintBottom_toTopOf="@+id/addGameBtn"
            app:layout_constraintHorizontal_bias="0.506"
            android:hint="add new board game"/>
    <Button
            android:text="DECIDE!"
            android:layout_width="0dp"
            android:layout_height="54dp"
            app:layout_constraintBottom_toBottomOf="parent"
            android:id="@+id/selectedGameBtn" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:fontFamily="@font/merriweather_bold" android:textSize="18sp"
            android:textColor="@color/colorAccent" android:background="@color/colorPrimaryDark"/>
    <Button
            android:text="ADD GAME"
            android:layout_width="228dp"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintEnd_toEndOf="parent"
            android:id="@+id/addGameBtn"
            android:background="@color/colorPrimaryDark"
            android:fontFamily="@font/merriweather_bold" android:textColor="@color/colorAccent"
            app:layout_constraintHorizontal_bias="0.513"
            android:layout_marginBottom="100dp" app:layout_constraintBottom_toTopOf="@+id/selectedGameBtn"/>

</android.support.constraint.ConstraintLayout>